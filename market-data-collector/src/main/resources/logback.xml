<configuration>

    <appender name="STDOUT" class="de.steinberg.rpc.execution.trigger.ui.MessageQueueAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>